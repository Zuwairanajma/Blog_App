<div class="comment-container">
<h3>Add a new Comment</h3>
<div class="comment-form">
<%= form_with model: [@user, @post, @comment], url: user_post_comments_path do |f| %>
<div>
<%= f.label :text, required: true%>
<%= f.text_field :text, required: true %>
</div>
<%= f.submit "Submit" %>
</div>
</div>
<% end %>
