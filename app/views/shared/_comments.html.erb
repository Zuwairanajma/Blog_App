<div class="comments">
  <% comments.each do |comment| %>
    <div class="comment">
      <p><%= comment.user.name%> :<%= comment.text %></p>
<% if can? :destroy, @comment %>
  <%= button_to 'Delete Comment', user_post_comment_path(comment.user, comment.post, comment), method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' }, class: 'delete-button' %>
<% end %>
    </div>
  <% end %>
</div>
