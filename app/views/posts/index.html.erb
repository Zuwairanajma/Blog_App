<%= stylesheet_link_tag('index') %>
<div class="posts-container">
<div class="users">
<%= render 'shared/user', user:@user %>
</div>

<div class="posts">
<h2>All Posts</h2>
<% @posts.each do |post| %>
<%= render 'shared/post', post: post, user:@user %>
<div class="post-content">
<h2>Comments</h2>
<%= render "shared/comments", comments:post.recent_comments %>
</div>
<% end %>
</div>
</div>
